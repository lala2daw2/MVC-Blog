@model KuvarBlog.Areas.Admin.ViewModel.MakaleVM
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <center>
        <h4>Eski Fotoğraf</h4>
        <img src="@Model.Makale.Foto" width="150" />
    </center>
    @using (Html.BeginForm("Update", "Makale", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.TextBoxFor(x=>x.Makale.Baslik,new {@class="form-control" })
            @Html.ValidationMessageFor(x=>x.Makale.Baslik)
        </div>
        <div class="form-group">
            @Html.TextAreaFor(x=>x.Makale.İcerik,13,3,new {@class="form-control" })
            @Html.ValidationMessageFor(x=>x.Makale.İcerik)
        </div>
        <div class="form-group">
            @Html.DropDownListFor(x=>x.Makale.KategoriID,new SelectList(Model.Kategorilers,"ID","KategoriAd"),new {@class="form-control" })
        </div>
        <div class="form-group">
            @Html.TextBox("txtFoto",null,new {@class="form-control",type="file" })
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
    }
</div>

