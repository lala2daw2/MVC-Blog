@model KuvarBlog.Models.Kullanicilar
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@using (Html.BeginForm("Update", "Security", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <center>
        <h2>Eski fotoğraf</h2>
        <div class="form-group">
            <img width="100" src="@(Model.Foto!=null?Model.Foto:"http://placehold.it/50x50")" />
            @Html.TextBox("txtFoto", null, new { @class = "form-control", type = "file" })
        </div>

        <div class="form-group">
            <label class="label control-label">Kullanıcı Adı :</label>
            @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label class="label control-label">Şifre :</label>
            @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
        </div>


        <div class="form-group">
            <label class="label control-label">Mail Adresi :</label>
            @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", type = "mail" })
        </div>

        <div class="form-group">
            <label class="label control-label">Adınız Soyad :</label>
            @Html.TextBoxFor(x => x.Adsoyad, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
    </center>
}



