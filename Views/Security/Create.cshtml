@model KuvarBlog.Models.Kullanicilar
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <br /><br />
    <h3>Kayıt Ol!</h3>
    <hr />
    @using (Html.BeginForm("Create", "Security", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", placeholder = "Şifre", type = "password" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", placeholder = "E-Mail Adresi" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Adsoyad, new { @class = "form-control", placeholder = "Ad ve Soyad" })
        </div>
        <div class="form-group">
            @Html.TextBox("txtFoto", null, new { @class = "form-control", type = "file" })
        </div>
        <button class="btn btn-success">Kaydet</button>
        <div class="alert-warning">
            @Html.ValidationSummary()
        </div>
    }
</div>

