@model IEnumerable<KuvarBlog.Models.Kategoriler>

<div class="card my-4">
    <h5 class="card-header">Kategoriler</h5>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                    @foreach (var item in Model)
                    {
                    <li>
                        @*@Html.ActionLink(item.KategoriAd,"MakaleGetir","Home",new {id=item.ID,name=item.KategoriAd })*@
                        <a  href="/Kategori/@item.KategoriAd">@item.KategoriAd (@item.Makalelers.Count)</a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>


